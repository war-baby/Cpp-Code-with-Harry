#include<iostream>
using namespace std;

int main() {
    int a=4, b=5;
    cout<<"Operators in C++: "<<endl;
    cout<<"Following are the types of operatorrs in C++: "<<endl;

    cout<<"Arithmetic operators: "<<endl;
    cout<<"a+b "<<a+b<<endl;
    cout<<"a-b "<<a-b<<endl;
    cout<<"a*b "<<a*b<<endl;
    cout<<"a/b "<<a/b<<endl;
    cout<<"a%b "<<a/b<<endl;
    cout<<"a++ "<<a++<<endl;
    cout<<"a-- "<<a--<<endl;
    cout<<"++a "<<++a<<endl;
    cout<<"--a "<<--a<<endl;
    
    return 0;
}
